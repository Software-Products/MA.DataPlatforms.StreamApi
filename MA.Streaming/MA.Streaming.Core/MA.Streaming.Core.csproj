	  <PackageReference Include="MA.DataPlatforms.Secu4.RouteReaderComponent" Version="1.3.3.18" />
	  <PackageReference Include="MA.DataPlatforms.Secu4.RouteSubscriberComponent" Version="1.3.3.18" />
	</ItemGroup>

	<ItemGroup>
    <ProjectReference Include="..\MA.Streaming.Abstraction\MA.Streaming.Abstraction.csproj" />
